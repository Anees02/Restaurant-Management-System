<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %highlight(%-5level) %logger{36} -- %highlight(%msg%n)</pattern>
        </encoder>
    </appender>


    <root level="INFO">

        <appender-ref ref="STDOUT" />
    </root>

    <logger name="tech.zeta" level="DEBUG"/>
</configuration>